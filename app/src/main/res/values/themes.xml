<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.B07_Project21" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_cream_deep</item>
        <item name="colorPrimaryVariant">@color/pink_cream_warm</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_cream_medium</item>
        <item name="colorSecondaryVariant">@color/pink_cream_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pink_cream_light</item>
        <!-- Background color -->
        <item name="android:windowBackground">@drawable/modern_pink_cream_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.B07_Project21.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/modern_pink_cream_background</item>
    </style>

    <style name="Theme.B07_Project21.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.B07_Project21.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    
    <!-- Comforting Font Styles -->
    <style name="ComfortingTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="ComfortingTextStyle.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ComfortingTextStyle.Italic">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="ComfortingTextStyle.BoldItalic">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
</resources>