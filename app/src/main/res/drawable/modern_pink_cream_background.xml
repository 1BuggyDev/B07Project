<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base cream background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF8F5" />
        </shape>
    </item>
    
    <!-- Soft pink cream gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFF0E6"
                android:centerColor="#FFF8F5"
                android:endColor="#FFF5F0" />
        </shape>
    </item>
    
    <!-- Subtle organic shape overlay -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#15FFE4D6" />
            <size
                android:width="400dp"
                android:height="400dp" />
        </shape>
    </item>
    
    <!-- Additional soft shape -->
    <item android:gravity="end|bottom">
        <shape android:shape="oval">
            <solid android:color="#10FFD6C7" />
            <size
                android:width="300dp"
                android:height="300dp" />
        </shape>
    </item>
</layer-list> 