<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pin_creation_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin Creation"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/Pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pin:"
            android:inputType="numberPassword" />

        <EditText
            android:id="@+id/reenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Re-enter Pin:"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/create_pin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Pin" />

        <TextView
            android:id="@+id/PinCreationError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FD2E2E" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>