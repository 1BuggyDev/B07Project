<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/pink_cream_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/pink_card_background">

        <!-- Tip Title -->
        <TextView
            android:id="@+id/tipTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safety Tip Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <!-- Tip Content with Bullets -->
        <LinearLayout
            android:id="@+id/tipContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- This will be populated dynamically with bullet points -->
            <TextView
                android:id="@+id/tipText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safety tip content with bullet points"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 